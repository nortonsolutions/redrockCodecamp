extends ../layout

block content
  .container-fluid
    .category-header.text-center.mb-5
      h1.category-title #{category}
      p.category-description= description
          
    .row
      each project in projects
        .col-md-6.col-lg-4.mb-4
          .card.project-card
            .card-body
              if project.demoUrl
                .project-badges.mb-3
                  span.badge.badge-success Live Demo
                  if project.testUrl
                    span.badge.badge-info.ml-2 API Test
              h5.card-title= project.name
              p.card-text Project implementation with full functionality
              .project-actions
                a.btn.btn-primary.project-btn(href=project.path)
                  | Launch Project
                  i.fa.fa-external-link.ml-2
                if project.testUrl && project.testUrl !== project.demoUrl
                  a.btn.btn-outline-secondary.project-btn.ml-2(href=project.testUrl)
                    | Test API
                    i.fa.fa-flask.ml-1
                
    .row.mt-5
      .col-md-12.text-center
        a.btn.btn-outline-primary.btn-lg(href='/portfolio')
          i.fa.fa-arrow-left.mr-2
          |  Back to Portfolio
          
  style.
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
    }
    .category-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 3rem 0;
      margin: -20px -15px 40px -15px;
      border-radius: 0 0 24px 24px;
      position: relative;
      overflow: hidden;
    }
    .category-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
    }
    .category-header > * {
      position: relative;
      z-index: 1;
    }
    .category-title {
      font-weight: 300;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      letter-spacing: -0.02em;
    }
    .category-description {
      font-size: 1.1rem;
      opacity: 0.9;
      font-weight: 300;
    }
    .project-card {
      border: none;
      background: rgba(255,255,255,0.95);
      backdrop-filter: blur(10px);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
      border-radius: 16px;
      height: 100%;
      transition: box-shadow 0.3s ease;
    }
    .project-card:hover {
      box-shadow: 0 12px 48px rgba(31, 38, 135, 0.25);
    }
    .project-card .card-body {
      padding: 1.5rem;
    }
    .card-title {
      font-weight: 600;
      color: #1e293b;
      margin-bottom: 1rem;
      font-size: 1.2rem;
    }
    .card-text {
      color: #64748b;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }
    .project-badges {
      display: flex;
      gap: 0.5rem;
    }
    .badge {
      font-size: 0.75rem;
      padding: 0.35rem 0.75rem;
      border-radius: 12px;
      font-weight: 500;
    }
    .badge-success {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }
    .badge-info {
      background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
    }
    .project-actions {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
    .project-btn {
      border-radius: 10px;
      padding: 0.6rem 1.2rem;
      font-weight: 500;
      font-size: 0.9rem;
      flex: 1;
      text-align: center;
      min-width: 120px;
    }
    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      transition: all 0.2s ease;
    }
    .btn-primary:hover {
      background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
    .btn-outline-secondary {
      border: 2px solid #94a3b8;
      color: #64748b;
      background: transparent;
    }
    .btn-outline-secondary:hover {
      background: #94a3b8;
      border-color: #94a3b8;
      color: white;
    }
    .btn-outline-primary {
      border: 2px solid #667eea;
      color: #667eea;
      background: rgba(255,255,255,0.9);
      backdrop-filter: blur(10px);
      border-radius: 12px;
    }
    .btn-outline-primary:hover {
      background: #667eea;
      border-color: #667eea;
      color: white;
    }
    .container-fluid {
      max-width: 1200px;
      margin: 0 auto;
    }