extends ../layout

block content
  .container-fluid
    .row
      .col-md-12
        .portfolio-header.text-center
          h1.display-4 
            i.fa.fa-code
            |  Norton Solutions Portfolio
          p.lead FreeCodeCamp Projects - #{totalProjects} Complete Implementations
          hr
        
        .projects-overview
          .row
            each category in projects
              .col-md-4.mb-4
                .card.portfolio-card
                  .card-header.text-center
                    h2 #{category.icon} #{category.name}
                  .card-body
                    p.card-text= category.description
                    .project-list
                      each project in category.projects
                        .project-item.mb-2
                          a.btn.btn-sm.btn-outline-primary.project-link(href=project.path) #{project.name}
                          small.text-muted.d-block= project.description
                    if category.id === 'apis'
                      .mt-3
                        a.btn.btn-info.btn-sm(href='/portfolio/apis/test') 
                          i.fa.fa-flask
                          |  API Testing Interface
                  .card-footer.text-center
                    a.btn.btn-primary(href=category.path) 
                      | View All #{category.name}
                      i.fa.fa-arrow-right.ml-2
        
        .portfolio-features.mt-5
          .row
            .col-md-4
              .feature-box.text-center
                i.fa.fa-server.fa-3x.text-primary
                h4 Backend APIs
                p Full Express.js microservices with MongoDB integration
            .col-md-4
              .feature-box.text-center
                i.fa.fa-shield.fa-3x.text-success
                h4 Security & Testing
                p Advanced authentication, bcrypt, and comprehensive testing
            .col-md-4
              .feature-box.text-center
                i.fa.fa-react.fa-3x.text-info
                h4 React Frontend
                p Interactive applications with state management and hooks

  style.
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
    }
    .portfolio-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 4rem 0;
      margin: -20px -15px 40px -15px;
      position: relative;
      overflow: hidden;
    }
    .portfolio-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255,255,255,0.1);
    }
    .portfolio-header > * {
      position: relative;
      z-index: 1;
    }
    .display-4 {
      font-weight: 300;
      letter-spacing: -0.02em;
    }
    .lead {
      font-weight: 300;
      opacity: 0.9;
    }
    .portfolio-card {
      border: none;
      background: rgba(255,255,255,0.95);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
      border-radius: 16px;
      height: 100%;
    }
    .portfolio-card:hover {
      box-shadow: 0 12px 48px rgba(31, 38, 135, 0.25);
    }
    .portfolio-card .card-header {
      background: linear-gradient(135deg, rgba(255,255,255,0.8) 0%, rgba(248,250,252,0.8) 100%);
      border-bottom: 1px solid rgba(226, 232, 240, 0.5);
      border-radius: 16px 16px 0 0 !important;
      padding: 1.5rem;
    }
    .portfolio-card .card-header h2 {
      font-size: 1.4rem;
      font-weight: 600;
      margin: 0;
      color: #1e293b;
    }
    .portfolio-card .card-body {
      padding: 1.5rem;
    }
    .portfolio-card .card-footer {
      background: transparent;
      border-top: 1px solid rgba(226, 232, 240, 0.3);
      padding: 1.5rem;
      border-radius: 0 0 16px 16px;
    }
    .project-item {
      padding: 1rem;
      background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
      border-radius: 12px;
      border: 1px solid rgba(226, 232, 240, 0.6);
      margin-bottom: 0.75rem;
    }
    .project-item:hover {
      background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    }
    .project-link {
      text-decoration: none !important;
      font-weight: 500;
      color: #3730a3 !important;
      display: block;
      margin-bottom: 0.25rem;
    }
    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 500;
    }
    .btn-primary:hover {
      background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
    .btn-outline-primary {
      border: 2px solid #667eea;
      color: #667eea;
      border-radius: 8px;
      font-weight: 500;
    }
    .btn-outline-primary:hover {
      background: #667eea;
      border-color: #667eea;
      color: white;
    }
    .btn-info {
      background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
      border: none;
      border-radius: 8px;
      font-weight: 500;
    }
    .feature-box {
      padding: 2.5rem;
      background: rgba(255,255,255,0.9);
      border-radius: 20px;
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.1);
      border: 1px solid rgba(255,255,255,0.2);
      margin-bottom: 2rem;
      text-align: center;
    }
    .feature-box i {
      margin-bottom: 1.5rem;
      opacity: 0.8;
    }
    .feature-box h4 {
      font-weight: 600;
      color: #1e293b;
      margin-bottom: 1rem;
    }
    .feature-box p {
      color: #64748b;
      font-weight: 400;
      line-height: 1.6;
    }
    .container-fluid {
      max-width: 1200px;
      margin: 0 auto;
    }
    .card-text {
      color: #64748b;
      line-height: 1.6;
    }
    small.text-muted {
      color: #94a3b8 !important;
      font-size: 0.85rem;
    }