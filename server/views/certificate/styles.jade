  @font-face {
    font-family: "Sax Mono";
    src: url("/fonts/saxmono.ttf") format("truetype");
  }

  * {
    margin: 0;
    padding: 0;
  }
  body{
    width: 1008px;
    height: 768px;
    margin: 0 auto;
  }

  .container {
    /*max-width: 1500px;*/
    /* width: 1008px;*/
