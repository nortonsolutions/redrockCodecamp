  /*mobile media queries*/
  @media screen and (max-width: 992px) {
    header {
      height: 80px;
    }

    .logo {
      margin-left: 0;
      padding: 20px;
      justify-content: center;
      line-height: 80px;
    }

    .logo img {
      max-width: 70px;
      margin-top: 5px;
      margin-bottom: 5px;
    }

    .issue-date {
      margin-top: 10px;
      margin-right: 0;
      text-align: center;
      line-height: 0px;
      word-wrap: break-word;
    }

    .issue-date strong {
      display: block;
      margin-top: 15px;
      line-height: 25px;
    }

    .information {
      height: 280px;
    }

    .information-container {
      margin: 0px 15px;
      text-align: center;
      word-wrap: break-word;
    }

    h3 {
      font-size: 25px;
    }

    h1 {
      font-size: 28px;
    }
  }

  @media screen and (max-width: 675px) {
    .container {
      padding: 0;
      border: 0;
    }

    header {
      height: 190px;
    }

    h3 {
      font-size: 15px;
    }

    h1  {
      font-size: 17px;
    }

