  .information {
    /*margin-top: 0px;*/
    height: 100%;
    text-align: center;
    background-color: #efefef;
    flex-grow:2;
    display:flex;
    align-items:center;
  }

  .information-container {
    /*position: relative;*/
    /*top: 50%;*/
    /*transform: translateY(-50%);&*/
    margin: 0 100px;
    display:flex;
    flex-direction: column;
    justify-content: center;
  }

  p {
    margin: 0;
  }

  h3 {
    font-size: 20px;
  }

  h4 {
    margin-top: 18px;
    font-size: 18px;
  }

  h1 {
    font-size: 30px;
    /*color: #006400;*/
    color: #985c16;
  }

  .signatures {
    display: flex;
    flex-direction: column;
    align-items: center;
    /*text-align: center;*/
    /*margin: 0 auto;*/
    background-color: #efefef;
    padding-bottom:20px;
  }

  .signatures img {
    max-width: 200px;
    /*width: 100%;*/
    margin: 0 auto;
  }

  .signatures p {
    font-size: 18px;
    padding-top: 10px;
  }

  .sigLine{
    border-bottom: 1px solid lightgrey;
    width:400px;
  }

  .verify {
    padding: 30px 0;
    font-size: 15px;
    text-align: center;
    word-wrap: break-word;
    background-color: #efefef;
  }

  /*adds vertical alignment when the height is bigger than required to display everything*/
