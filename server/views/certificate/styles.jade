  }

  .logo img {
    /* max-width: 500px; */
    max-height: 120px;
    width: auto;
  }

  .logo-banner{
    /*line-height: 100px;*/
    font-size: 48px;
    text-align: center;
    flex-grow:1;
    margin: auto;
  }
  
  .issue-date {
    /*line-height: 100px;*/
